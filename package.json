{
  "name": "alcms-rearend",
  "version": "1.0.0",
  "description": "Alcms CMS 资源管理系统 - 基于Node.js、Express.js、PostgreSQL构建的完整内容管理系统",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "cross-env NODE_ENV=development DISABLE_CACHE=true nodemon src/app.js",
    "install:full": "node database/install-full.js",
    "db:check:dynamic": "node database/check-tables-dynamic.js",
    "create-admin": "node scripts/create-admin.js",
    "pm2:dev": "pm2 start ecosystem.config.js --only alcms-backend-dev",
    "pm2:prod": "pm2 start ecosystem.config.js --only alcms-backend --env production",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit"
  },
  "keywords": [
    "alcms",
    "backend",
    "user-management",
    "rbac",
    "jwt",
    "postgresql"
  ],
  "author": "AURA-X AI Assistant",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cron": "^3.0.2",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
